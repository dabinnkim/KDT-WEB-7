    <h2>GET 요청</h2>
    <form action="/getForm" name="login" method="get">
      <input
        type="text"
        name="id"
        placeholder="ID"
        required
        minlength="3"
        maxlength="6"
      />
      <input type="password" name="password" placeholder="PASSWORD" />
      <button type="submit">get제출</button>
    </form>

    <hr />

    <h2>POST 요청</h2>
    <form action="/postForm" name="login" method="post">
      <input type="text" name="id" placeholder="ID" />
      <input type="password" name="password" placeholder="PASSWORD" />
      <button type="submit">post제출</button>
